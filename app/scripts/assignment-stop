#!/usr/bin/env bash
### Usage:
###   assignment-stop <order>
### Options:
###   --help
###
### ship stops current assignment and goes idle

#--HEAD--
SCRIPT="$(readlink -e -- "${0}")"
SCRIPT_NAME="$(basename "${SCRIPT}")"
SCRIPT_DIR="$(dirname "${SCRIPT}")"
source "${SCRIPT_DIR}/main.source"
#--/HEAD--

stop hyperdrive-assignment name="${order}" 2>&1 | timestamped "${SCRIPT_NAME}"
